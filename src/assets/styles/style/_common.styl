@require './variable.styl';

canvas, iframe
    display: block;

a
    &, &:link, &:visited, &:hover, &:active
        color: inherit;
        text-decoration: none;

pre
	white-space: pre-wrap;

textarea
    resize: none !important;

main.q-layout-padding
    padding: 0;

.full-height
    height: 100%;
    min-height: 100%;
    max-height: 100%;

.full-width
    width: 100%;
    min-height: 100%;
    max-height: 100%;

x-center()
    margin-left: auto; margin-right: auto;

.x-center
    x-center();

.indent
    margin-left: 2rem;

.relative
    position: relative;

.absolute
    position: absolute;

.absolute-center
    position: absolute;
    left: 50%; top: 50%;
    transform: translate(-50%, -50%);

.scroll-x
    overflow-x: auto;

.scroll-y
    overflow-y: auto;

.cursor-pointer
    cursor: pointer;

.hover-active
    &:hover
        position: relative;

        &::after
            content: '';
            display: block;
            position: absolute;
            width: 100%; height: 100%;
            top: 0; left: 0;
            background-color: rgba(0, 0, 0, 0.05)

.heading-only
    width: 0; height: 0;
    min-width: 0; min-height: 0;
    opacity: 0;
    overflow: hidden;
    position: absolute;
